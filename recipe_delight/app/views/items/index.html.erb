<div class="row">
    <div class="large-4 columns">
        <br/>
        <%= render 'items/search_form' %>
    </div>
</div>
    <div class="row">
    <br/>
    <div class="large-5 columns">
    <h1>Product List</h1>
    <% @items.each do |item| %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Amount</th>
                </tr>
            <tbody>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.price %></td>
                    <td><%= item.unit %></td>
                </tr>
            </tbody>
        </table>
    <% end %>
    </div>
    </div>
<h1>Search for Target Products</h1>
<div class="large-5 columns">
<%= form_tag search_item_path do %>
    <%= text_field_tag "Search" %>
    <%= submit_tag "Search" %>
<% end %>
</div>
