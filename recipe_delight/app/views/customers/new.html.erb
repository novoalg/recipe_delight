<h1>Registration</h1>
<div class="large-5 columns">
    <%= form_for @customer do |form| %>
        <%= form.label :email %>
        <%= form.text_field :email %>

        <%= form.label :password %>
        <%= form.password_field :password %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>

        <%= form.submit "Register" %>
    <% end %>
</div>
